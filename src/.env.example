# ==================================================
# SOCIAL MEDIA BOT - ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ==================================================
# SERVER CONFIGURATION
# ==================================================
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=social_media_bot
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# ==================================================
# REDIS CONFIGURATION (for task queues)
# ==================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================================================
# SECURITY
# ==================================================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ==================================================
# FACEBOOK / INSTAGRAM CONFIGURATION
# ==================================================
# Get these from: https://developers.facebook.com/
FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here

# ==================================================
# TWITTER CONFIGURATION
# ==================================================
# Get these from: https://developer.twitter.com/
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# ==================================================
# LINKEDIN CONFIGURATION
# ==================================================
# Get these from: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# ==================================================
# TIKTOK CONFIGURATION
# ==================================================
# Get these from: https://developers.tiktok.com/
TIKTOK_CLIENT_ID=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# ==================================================
# FILE UPLOAD CONFIGURATION
# ==================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov,avi

# ==================================================
# EMAIL CONFIGURATION (for notifications)
# ==================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# ==================================================
# LOGGING
# ==================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ==================================================
# RATE LIMITING
# ==================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================================================
# CORS CONFIGURATION
# ==================================================
CORS_ORIGIN=http://localhost:3000

# ==================================================
# SESSION CONFIGURATION
# ==================================================
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000